@model IEnumerable<TrashCollector.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h1>Transactions</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChargeAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChargeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChargeAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChargeDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FirstName)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="Index">Back to Home</a>

