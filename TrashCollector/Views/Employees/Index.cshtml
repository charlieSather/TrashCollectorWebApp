@model TrashCollector.Models.EmployeeViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1 class="text-center">Customers</h1>
<h1 class="text-center">@DateTime.Today.DayOfWeek.ToString()</h1>

<form class="form-group" asp-action="FilterByDay" method="get">
    <div class="form-group">
        <label class="control-label">Select Day</label>
        <select asp-for="Day" class="control-label" asp-items="@Model.Days"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Filter by Day" class="btn btn-outline-dark" />
    </div>
</form>

@*<a asp-action="FilterByDay" asp-route-day="@Html."></a>*@


<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Customers != null)
        {
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address.StreetAddress)
                    </td>
                    <td>
                        <a asp-action="PickupTrash" asp-route-id="@item.Id">Pickup Trash</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
